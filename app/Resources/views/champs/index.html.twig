{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Liste des champs</h1>
 <div class="row">
 
                            <div class="col-12">
                                <div class="card-box table-responsive">
                                    <h4 class="m-t-0 header-title"><b>Table champs</b></h4>
                                    <p class="text-muted font-14 m-b-30">
 

                                    <table id="datatable" class="table table-bordered">
                                       <thead>
            <tr>
                <th>Id</th>
                <th>Nomchamps</th>
                <th>Typechamps</th>
                <th>Longeurchamps</th>
                <th>Actions</th>
            </tr>
        </thead>


        <tbody>
        {% for champ in champs %}
            <tr>
                <td><a href="{{ path('champs_show', { 'id': champ.id }) }}">{{ champ.id }}</a></td>
                <td>{{ champ.nomChamps }}</td>
                <td>{{ champ.typeChamps }}</td>
                <td>{{ champ.longeurChamps }}</td>
                <td>
                    
                     <ul>
                        
                            <a href="{{ path('champs_show', { 'id': champ.id }) }}">
                            <i class="fi-eye"></i></a>
                        <br>
                         <a href="{{ path('champs_edit', { 'id': champ.id }) }}">
                            <i class=" dripicons-pencil"></i></a>
                        
                    </ul>
                   
                </td>
            </tr>
        {% endfor %}
       </tbody>
                                    </table>
                                </div>
                            </div>
                        </div> <!-- end row -->


    <ul>
         <a href="{{ path('champs_new') }}"class="btn btn-success btn-rounded waves-light waves-effect w-md">Creer nouveau champs</a>

    </ul>
{% endblock %}
