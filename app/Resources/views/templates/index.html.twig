 {% extends 'admin.html.twig' %}

{% block body %}
    <h1>Champs list</h1>
 <div class="row">
 
                            <div class="col-12">
                                <div class="card-box table-responsive">
                                    <h4 class="m-t-0 header-title"><b>Table champs</b></h4>
                                    <p class="text-muted font-14 m-b-30">
 

                                    <table id="datatable" class="table table-bordered">
                                <thead>
            <tr>
                <th>Id</th>
                <th>Nomtemplate</th>
                <th>Fichiernom</th>
               
                <th>Actions</th>
            </tr>
        </thead>

         <tbody>
        {% for template in templates %}
            <tr>
                <td><a href="{{ path('templates_show', { 'id': template.id }) }}">{{ template.id }}</a></td>
                <td>{{ template.nomTemplate }}</td>
                <td>{{ template.fichierNom }}</td>
                <td>
                    <ul>
    
                            <a href="{{ path('templates_show', { 'id': template.id }) }}"> <i class=" dripicons-pencil"></i></a>
                        
                            <a href="{{ path('templates_edit', { 'id': template.id }) }}"><i class="fi-eye"></i></a>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div> <!-- end row -->


 <ul>
        
                    <a href="{{ path('templates_new') }}"class="btn btn-success btn-rounded waves-light waves-effect w-md">Creer template</a>

    </ul>
{% endblock %}